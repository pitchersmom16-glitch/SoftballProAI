# Example environment variables for SoftballProAI
# Copy to .env and fill in secrets for local development

# Database
DATABASE_URL=postgres://user:password@localhost:5432/softballproai

# Session
SESSION_SECRET=change_this_in_production

# OpenAI / AI Integrations
AI_INTEGRATIONS_OPENAI_API_KEY=your_openai_api_key_here

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# App
BASE_URL=http://localhost:5000
PORT=5000
NODE_ENV=development

# Dev-only: set to 'true' to enable dev auto-login even if NODE_ENV === 'production'
# Use cautiously
DEV_AUTH=false
